<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<TextView
    android:background="@drawable/border"
    android:id="@+id/etBookName"
    android:layout_width="610dp"
    android:layout_height="50dp"
    android:gravity="center"
    android:textSize="30dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:layout_marginStart="630dp"
    android:layout_marginTop="150dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<TextView
    android:background="@drawable/border"
    android:id="@+id/tv_author"
    android:layout_width="610dp"
    android:layout_height="50dp"
    android:gravity="center"
    android:textSize="20dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:layout_marginStart="630dp"
    android:layout_marginTop="210dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<TextView
    android:background="@drawable/border"
    android:id="@+id/tv_price"
    android:layout_width="610dp"
    android:layout_height="50dp"
    android:textSize="30dp"
    android:gravity="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:layout_marginStart="630dp"
    android:layout_marginTop="270dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<TextView
    android:background="@drawable/border"
    android:id="@+id/tv_stock"
    android:layout_width="610dp"
    android:layout_height="50dp"
    android:textSize="30dp"
    android:gravity="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:layout_marginStart="630dp"
    android:layout_marginTop="330dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
<TextView

    android:id="@+id/tv_introduce"
    android:layout_width="610dp"
    android:layout_height="300dp"
    android:textSize="17dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:layout_marginStart="630dp"
    android:layout_marginTop="390dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<TextView
    android:background="@drawable/border"
    android:id="@+id/tv_location"
    android:layout_width="760dp"
    android:layout_height="50dp"
    android:gravity="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textSize="30dp"
    tools:layout_editor_absoluteX="260dp"
    tools:layout_editor_absoluteY="90dp"
    android:layout_marginStart="260dp"
    android:layout_marginTop="90dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/onBackPressed"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="#64FFDA"
        android:text="돌아가기"

        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/abc"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="위   치"
    android:textSize="20dp"
    android:layout_marginStart="150dp"
    android:layout_marginTop="90dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_goToLocation"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="1030dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="#64FFDA"
        android:onClick="goToClick"
        android:text="안   내"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_payment"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="1140dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="#64FFDA"
        android:text="결   제"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/dfsdf"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="책   제 목"
    android:textSize="20dp"
    android:layout_marginStart="510dp"
    android:layout_marginTop="150dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<Button
    android:id="@+id/vsddvs"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="저   자"
    android:textSize="20dp"
    android:layout_marginStart="510dp"
    android:layout_marginTop="210dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<Button
    android:id="@+id/vdsvdt"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="정   가"
    android:textSize="20dp"
    android:layout_marginStart="510dp"
    android:layout_marginTop="270dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<Button
    android:id="@+id/zxcxcst"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="재   고"
    android:textSize="20dp"
    android:layout_marginStart="510dp"
    android:layout_marginTop="330dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<Button
    android:id="@+id/vdsdsdc"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="책   소 개"
    android:textSize="20dp"
    android:layout_marginStart="510dp"
    android:layout_marginTop="390dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<ImageView
    android:id="@+id/iv_book"
    android:layout_width="450dp"
    android:layout_height="540dp"
    android:scaleType="fitXY"

    android:layout_marginStart="40dp"
    android:layout_marginTop="150dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
